
  
   <div class="image-with-text section">
 <img src="{{ section.settings.image | img_url:'master' }}" alt="{{ section.settings.title }}">
 <h2 class="heading">{{ section.settings.title }}</h2>
   <div class="image-with-text-body">{{ section.settings.text }}</div>
 </div>
 <div class="text">
  <h2 class="section-heading">{{ section.settings.section-heading }}</h2>

  <h1 class="section-large-heading">{{ section.settings.section-large-heading }}</h1>

  <p class="description">{{ section.settings.description }}</p>

    <button class="view-btn">
      <a href="{{ section.settings.view-btn-link }}">{{ section.settings.view-btn }}</a>
    </button>
 </div>
{% schema %}
{

  "name":"new section",
     "settings":[
       {
         "type":"image_picker",
         "id":"image",
         "label":"image"
       },
 
    {
      "id": "section-heading",
      "type": "text",
      "label": "Heading 1"
    },
    {
      "id": "section-large-heading",
      "type": "text",
      "label": "Heading 2"
    },
    {
      "id": "description",
      "type": "textarea",
      "label": "Description"
    },
    {
      "id": "view-btn-link",
      "type": "url",
      "label": "Button URL"
    },
    {
      "id": "view-btn",
      "type": "text",
      "label": "Button name"
    },
    {
      "id": "image_url",
      "type": "url",
      "label": "Image URL",
      "info": "Enter the URL of the image you want to display."
    }
  ],
  "presets": [
    {
      "name": "Welcome section Test"
    }
  ]
}
{% endschema %}

